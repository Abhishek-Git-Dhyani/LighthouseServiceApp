<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/pwe_custom_card_gray_background"
    android:padding="10dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/root_linear_debit_atm_pin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_card_type_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/pwe_title_color"
            android:textSize="20sp"
            android:gravity="center"
            android:text="Debit + Atm Pin"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <EditText
            android:id="@+id/edit_searchview_atm_debit_pin"
            android:layout_width="match_parent"
            android:background="@drawable/custom_background_white"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="@color/pwe_text_color"
            android:textColorHint="@color/pwe_hint_color"
            android:hint=" Search"
            android:layout_margin="10dp"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/search_icon_grey"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/list_atm_debit_pin_banks"
                android:layout_width="match_parent"
                android:divider="@null"
                android:scrollbars="none"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:background="@color/pwe_fragment_background"
                android:focusedByDefault="true"
                />
        </LinearLayout>

        <include layout="@layout/pwe_pay_button_layout"/>

    </LinearLayout>

</LinearLayout>