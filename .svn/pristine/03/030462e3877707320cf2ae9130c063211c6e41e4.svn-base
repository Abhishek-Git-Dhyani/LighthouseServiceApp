<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/pwe_custom_card_gray_background"
    android:padding="10dp"
    android:elevation="2dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_card_type_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/pwe_title_color"
        android:textSize="20sp"
        android:gravity="center"
        android:text="UPI"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.easebuzz.payment.kit.ExpandableHeightGridView
                android:id="@+id/grid_upi_options"
                android:layout_width="match_parent"
                android:numColumns="3"
                android:background="@color/pwe_fragment_background"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="invisible"
                android:layout_marginTop="20dp"
                android:id="@+id/linear_upi_address_holder"
                android:background="@drawable/custom_background_white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/edit_upi_username"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:hint="username"
                        android:background="@color/white"
                        android:singleLine="true"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:layout_gravity="center"
                        android:textColor="@color/pwe_text_color"
                        android:textColorHint="@color/pwe_hint_color"
                        android:layout_height="40dp"/>


                </LinearLayout>



            </LinearLayout>

            <TextView
                android:id="@+id/text_upi_address_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:textColor="@color/pwe_error_color"
                android:textSize="14sp" />

        </LinearLayout>



    </LinearLayout>

    <include layout="@layout/pwe_pay_button_layout"/>

</LinearLayout>

