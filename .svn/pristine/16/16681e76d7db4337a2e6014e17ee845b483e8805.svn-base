<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/pwe_custom_card_gray_background"
    android:padding="10dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_card_type_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/pwe_title_color"
            android:textSize="20sp"
            android:gravity="center"
            android:text="Wallets"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linear_wallet_view_holder"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.easebuzz.payment.kit.ExpandableHeightGridView
                    android:id="@+id/cash_card_grid"
                    android:layout_width="match_parent"
                    android:numColumns="3"
                    android:background="@color/pwe_fragment_background"
                    android:layout_height="match_parent"
                    />

            </LinearLayout>

            <include layout="@layout/pwe_pay_button_layout"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>