<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/pwe_custom_card_gray_background"
    android:padding="10dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/root_linear_debit_card"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear_dc_view_holder">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:elevation="5dp">

                <ImageView
                    android:id="@+id/image_pwe_complete_icon"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:src="@drawable/pwe_olamoney_complete_icon"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    />


                <LinearLayout
                    android:id="@+id/linear_olamoney_eligibitly_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    >


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_ola_mobile_number_message"
                        android:text=""
                        android:padding="5dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textColor="@color/pwe_text_color"
                        android:gravity="center_horizontal"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_ola_message"
                        android:text=""
                        android:padding="5dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textColor="@color/pwe_hint_color"
                        android:gravity="center_horizontal"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"/>


                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_refresh"
                        android:id="@+id/img_refresh"
                        android:layout_gravity="center"
                        android:background="@drawable/swipe_image_click_effect"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>

                    <include layout="@layout/pwe_pay_button_layout"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_ola_error_details"
                        android:text=""
                        android:layout_gravity="center_horizontal"
                        android:padding="5dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textColor="@color/pwe_error_color"
                        android:textSize="16sp"
                        android:gravity="center_horizontal" />

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    </LinearLayout>

</LinearLayout>