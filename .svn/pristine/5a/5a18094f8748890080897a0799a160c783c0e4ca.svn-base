<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/linear_root_footer"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/pwe_footer_background">


    <include layout="@layout/pwe_discount_coupon_card"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/pwe_cancel_button_text_color"
            android:minHeight="50dp"
            android:text="Cancel Transaction"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:id="@+id/button_cancel_transaction" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/pwe_cancel_button_text_color"
            android:minHeight="50dp"
            android:text="Fail Transaction"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:id="@+id/button_failed_transaction" />


    </LinearLayout>



    <include layout="@layout/pwe_layout_certificate_new"/>

</LinearLayout>