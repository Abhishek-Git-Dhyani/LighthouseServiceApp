<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pwe_custom_card_background"
        android:layout_margin="10dp"
        android:elevation="5dp">

        <LinearLayout
            android:id="@+id/linear_coupon_data_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_coupon"
                android:layout_width="135dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/text_coupons_brand_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/pwe_text_color"
                />

            <TextView
                android:id="@+id/text_coupons_offer_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:singleLine="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:text=""
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/pwe_divider_color"
                android:layout_marginTop="3dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7">
                    <TextView
                        android:id="@+id/text_coupon_price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:textColor="@color/pwe_text_color"
                        android:layout_gravity="left"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:id="@+id/text_coupon_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="View"
                        android:textSize="14sp"
                        android:gravity="right"
                        android:textColor="@color/pwe_text_color"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>