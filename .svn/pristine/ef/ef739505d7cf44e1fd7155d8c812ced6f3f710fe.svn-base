<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/pwe_custom_card_gray_background"
    android:padding="10dp"
    android:elevation="2dp"
    android:orientation="vertical"
    android:id="@+id/linear_upi_apps_root">

    <TextView
        android:id="@+id/text_insta_collect_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/pwe_title_color"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text=""
        android:padding="2dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/text_insta_collect_steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/pwe_title_color"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:text="Steps to make payment"
        android:textStyle="bold"
        android:padding="2dp"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/text_insta_collect_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/pwe_title_color"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:text=""
        android:padding="2dp"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/text_insta_collect_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:textColor="@color/pwe_error_color"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_gravity="center"/>

    <include layout="@layout/pwe_pay_button_layout"/>

</LinearLayout>