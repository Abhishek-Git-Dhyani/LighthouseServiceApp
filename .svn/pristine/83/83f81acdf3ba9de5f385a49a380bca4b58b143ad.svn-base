<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@drawable/pwe_custom_card_gray_background"
    android:padding="10dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/root_linear_saved_card"
        android:orientation="vertical">


        <TextView
            android:id="@+id/text_card_type_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/pwe_title_color"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Saved Cards"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />


            <ListView
                android:id="@+id/list_cards"
                android:layout_width="match_parent"
                android:divider="@null"
                android:scrollbars="none"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:background="@color/pwe_fragment_background"
                android:layout_weight="1"
                android:focusedByDefault="true" />

        <include layout="@layout/pwe_pay_button_layout"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_no_saved_card_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="No saved cards"
            android:gravity="center"
            android:textColor="@color/pwe_hint_color" />

    </LinearLayout>


</LinearLayout>