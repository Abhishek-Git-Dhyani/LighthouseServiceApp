<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pwe_discount_list_background">

    <LinearLayout
        android:id="@+id/linear_session_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:id="@+id/linear_go_back"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/image_apply_discount_back"
                android:layout_width="30dp"
                android:layout_height="24dp"
                android:src="@drawable/pwe_ic_back"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9">

            <TextView
                android:id="@+id/text_merchant_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:singleLine="true"
                android:textColor="@color/pwe_text_color"
                android:gravity="center_vertical"
                android:text="Back to mode of payment"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center">
            <ImageView
                android:id="@+id/img_apply_discount"
                android:layout_width="20dp"
                android:layout_height="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Apply Discount"
                android:textColor="@color/pwe_text_color"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/pwe_rounded_corner_gray_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <EditText
                android:id="@+id/edit_discount_coupon_code"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.3"
                android:gravity="left|center_vertical"
                android:hint="Enter discount code"
                android:textColor="@color/pwe_text_color"
                android:textColorHint="@color/pwe_hint_color"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                />

            <Button
                android:id="@+id/btn_apply_discount_coupon_code"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.7"
                android:gravity="center"
                android:text="Apply"
                android:textAllCaps="false"
                android:textColor="@color/pwe_discount_apply_coupon_text"
                android:textSize="14sp"
                android:background="?android:attr/selectableItemBackground"
                android:textStyle="bold"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/pwe_error_color"
        android:text=""
        android:visibility="gone"
        android:id="@+id/text_discount_code_apply_error"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center">
            <ImageView
                android:id="@+id/img_available_discount"
                android:layout_width="20dp"
                android:layout_height="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Available Discount"
                android:textColor="@color/pwe_text_color"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <ListView
            android:id="@+id/list_discount_codes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:scrollbars="none"
            android:focusedByDefault="true"
             />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linear_no_data_holder"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/pwe_note_color"
                android:text="Discount codes are not available"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>